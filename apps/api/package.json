{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "main": "app.js",
  "type": "module",
  "scripts": {
    "dev": "vite-node -w src/server.ts",
    "build": "tsup src/server.ts --minify",
    "start": "node dist/server.js",
    "test": "npm run db:seed && tap --jobs=1 test/**/*",
    "standalone": "npm run build && node --env-file=.env dist/server.js",
    "db:migrate": "npx mikro-orm migration:create",
    "db:migrate:initial": "npx mikro-orm migration:create --initial",
    "db:migrate:up": "npx mikro-orm migration:up",
    "db:migrate:down": "npx mikro-orm migration:down",
    "lint": "eslint --ignore-pattern=dist",
    "lint:fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/env": "^5.0.1",
    "@fastify/error": "^4.0.0",
    "@fastify/helmet": "^13.0.0",
    "@fastify/multipart": "^9.0.1",
    "@fastify/rate-limit": "^10.2.1",
    "@fastify/sensible": "^6.0.1",
    "@fastify/session": "^11.0.2",
    "@fastify/static": "^8.0.3",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.2.0",
    "@fastify/type-provider-typebox": "^5.1.0",
    "@fastify/under-pressure": "^9.0.2",
    "@mikro-orm/cli": "^6.4.1",
    "@mikro-orm/core": "^6.4.1",
    "@mikro-orm/migrations": "^6.4.1",
    "@mikro-orm/postgresql": "^6.4.1",
    "@mikro-orm/reflection": "^6.4.1",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@scalar/fastify-api-reference": "^1.25.82",
    "@sinclair/typebox": "^0.34.11",
    "awilix": "^12.0.4",
    "bcrypt": "^5.1.1",
    "bull": "^4.16.4",
    "close-with-grace": "^2.1.0",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0",
    "fastify-cli": "^7.1.0",
    "fastify-plugin": "^5.0.1",
    "form-data": "^4.0.1",
    "glob": "^11.0.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "liquidjs": "^10.19.0",
    "nodemailer": "^6.9.16",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^6.4.17",
    "eslint": "^9.17.0",
    "fastify-tsconfig": "^2.0.0",
    "tap": "^21.0.1",
    "tsc-alias": "^1.8.10",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "~5.7.2",
    "vite": "^6.0.3",
    "vite-node": "^2.1.8"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/mikro-orm.config.ts",
      "./dist/config/mikro-orm.config.js"
    ]
  }
}
