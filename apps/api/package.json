{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "main": "app.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsup src/server.ts --minify",
    "start": "node dist/server.js",
    "test": "npm run db:seed && tap --jobs=1 test/**/*",
    "standalone": "npm run build && node --env-file=.env dist/server.js",
    "db:migrate": "npx mikro-orm-esm migration:create",
    "db:migrate:initial": "npx mikro-orm-esm migration:create --initial",
    "db:migrate:up": "npx mikro-orm-esm migration:up",
    "db:migrate:down": "npx mikro-orm-esm migration:down",
    "lint": "eslint --ignore-pattern=dist",
    "lint:fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "@fastify/autoload": "^6.0.0",
    "@fastify/cookie": "^11.0.1",
    "@fastify/cors": "^10.0.0",
    "@fastify/env": "^5.0.1",
    "@fastify/helmet": "^12.0.0",
    "@fastify/multipart": "^9.0.1",
    "@fastify/rate-limit": "^10.0.1",
    "@fastify/sensible": "^6.0.1",
    "@fastify/session": "^11.0.1",
    "@fastify/static": "^8.0.2",
    "@fastify/swagger": "^9.0.0",
    "@fastify/swagger-ui": "^5.0.1",
    "@fastify/type-provider-typebox": "^5.0.0",
    "@fastify/under-pressure": "^9.0.1",
    "@mikro-orm/cli": "^6.4.0",
    "@mikro-orm/core": "^6.4.0",
    "@mikro-orm/migrations": "^6.4.0",
    "@mikro-orm/postgresql": "^6.4.0",
    "@mikro-orm/reflection": "^6.4.0",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@scalar/fastify-api-reference": "^1.25.69",
    "@sinclair/typebox": "^0.33.0",
    "close-with-grace": "^2.1.0",
    "concurrently": "^9.0.1",
    "dotenv": "^16.4.5",
    "fastify": "^5.0.0",
    "fastify-cli": "^7.0.0",
    "fastify-plugin": "^5.0.1",
    "form-data": "^4.0.1",
    "knex": "^3.1.0",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/node": "^22.5.5",
    "eslint": "^9.11.0",
    "fastify-tsconfig": "^2.0.0",
    "tap": "^21.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsup": "^8.3.5",
    "tsx": "^4.19.1",
    "typescript": "~5.6.2"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/mikro-orm.config.ts",
      "./dist/config/mikro-orm.config.js"
    ]
  }
}
